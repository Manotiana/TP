<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculetteActivity">

    <TextView
        android:id="@+id/field1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.0"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintHeight_percent="0.30"
        android:gravity="bottom|right"
        android:textSize="45sp"
        android:paddingRight="5dp"

        >

    </TextView>
    <TextView
        android:id="@+id/field2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.10"
        android:layout_weight="0.0"
        android:textColor="@color/black"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/field1"
        android:gravity="right"
        android:textSize="45sp"
        android:paddingRight="5dp"

        >

    </TextView>
    <Button
        android:id="@+id/one"
        android:text="1"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintBottom_toTopOf="@+id/four"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHorizontal_weight="1"
        >

<!--        app:layout_constraintTop_toBottomOf="@+id/field2"-->

    </Button>
    <Button
        android:id="@+id/two"
        android:text="2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/one"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintBottom_toTopOf="@+id/five"
        app:layout_constraintWidth_percent="0.25">
<!--        app:layout_constraintTop_toBottomOf="@+id/field2"-->
    </Button>
    <Button
        android:id="@+id/three"
        android:text="3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/two"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintBottom_toTopOf="@+id/six"
        app:layout_constraintWidth_percent="0.25">
<!--        app:layout_constraintTop_toBottomOf="@+id/field2"-->
    </Button>
    <Button
        android:id="@+id/plus"
        android:text="+"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/three"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintBottom_toTopOf="@+id/minus"

        app:layout_constraintWidth_percent="0.25">
<!--        app:layout_constraintTop_toBottomOf="@+id/field2"-->
    </Button>
    <Button
        android:id="@+id/four"
        android:text="4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintBottom_toTopOf="@+id/seven"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHorizontal_weight="1"
        >

<!--        app:layout_constraintTop_toBottomOf="@+id/one"-->

    </Button>
    <Button
        android:id="@+id/five"
        android:text="5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/four"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintBottom_toTopOf="@+id/eight"
        app:layout_constraintWidth_percent="0.25">
<!--        app:layout_constraintTop_toBottomOf="@+id/two"-->
    </Button>
    <Button
        android:id="@+id/six"
        android:text="6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/five"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintBottom_toTopOf="@+id/nine"
        app:layout_constraintWidth_percent="0.25">
<!--        app:layout_constraintTop_toBottomOf="@+id/three"-->
    </Button>
    <Button
        android:id="@+id/minus"
        android:text="-"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/six"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintBottom_toTopOf="@+id/mul"
        app:layout_constraintWidth_percent="0.25">
<!--        app:layout_constraintTop_toBottomOf="@+id/plus"-->
    </Button>
    <Button
        android:id="@+id/seven"
        android:text="7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintBottom_toTopOf="@+id/equal"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHorizontal_weight="1"
        >
<!--        app:layout_constraintTop_toBottomOf="@+id/four"-->


    </Button>
    <Button
        android:id="@+id/eight"
        android:text="8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/seven"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintBottom_toTopOf="@+id/equal"
        app:layout_constraintWidth_percent="0.25">
<!--        app:layout_constraintTop_toBottomOf="@+id/five"-->
    </Button>
    <Button
        android:id="@+id/nine"
        android:text="9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/eight"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintBottom_toTopOf="@+id/divide"
        app:layout_constraintWidth_percent="0.25">
       <!-- app:layout_constraintTop_toBottomOf="@+id/six"-->
    </Button>
    <Button
        android:id="@+id/mul"
        android:text="*"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/nine"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintBottom_toTopOf="@+id/divide"
        app:layout_constraintWidth_percent="0.25">
<!--        app:layout_constraintTop_toBottomOf="@+id/minus"-->
    </Button>
    <Button
        android:id="@+id/equal"
        android:text="="
        android:layout_width="0dp"

        android:layout_weight="1"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintWidth_percent="0.50"
        app:layout_constraintHorizontal_weight="1"

        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.15"

        >
        <!--android:layout_height="0dp"
        android:layout_constraintWidth_percent="0.2"-->

<!--        app:layout_constraintEnd_toEndOf="parent"-->

    </Button>
    <Button
        android:id="@+id/zero"
        android:text="0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/equal"

        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.25">

    </Button>
<!--    app:layout_constraintTop_toBottomOf="@+id/nine"
   app:layout_constraintEnd_toEndOf="parent"-->
    <Button
        android:id="@+id/divide"
        android:text="%"
        android:layout_width="0dp"

        app:layout_constraintStart_toEndOf="@id/zero"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.25"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.15"

        >
<!--        app:layout_constraintTop_toBottomOf="@+id/mul"-->
    </Button>
    <!--<Button
        android:id="@+id/test"
        android:text=""
        android:layout_width="0dp"
        android:layout_height="wrap_content"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.25"
        >

    </Button>-->

</androidx.constraintlayout.widget.ConstraintLayout>